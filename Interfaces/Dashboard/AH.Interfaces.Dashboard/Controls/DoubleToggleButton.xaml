<UserControl x:Class="AH.Interfaces.Dashboard.Controls.DoubleToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AH.Interfaces.Dashboard.Controls"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             d:DesignHeight="100" d:DesignWidth="210">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
        <ToggleButton x:Name="leftButton" Margin="5,5,0,5" Width="100" Checked="Left_Checked"></ToggleButton>
        <ToggleButton x:Name="rightButton" Margin="0,5,5,5" Width="100" Checked="Right_Checked"></ToggleButton>
    </StackPanel>
</UserControl>
